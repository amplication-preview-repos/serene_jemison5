datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Avatar {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  imageUrl  String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Chat {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  isActive  Boolean?
  updatedAt DateTime @updatedAt
  user1     String?
  user2     String?
}

model User {
  avatars     Avatar[]
  createdAt   DateTime @default(now())
  email       String?  @unique
  fingerprint String?
  firstName   String?
  id          String   @id @default(cuid())
  ipAddress   String?
  lastName    String?
  password    String
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}
